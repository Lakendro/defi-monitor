# DeFi Monitor Environment Variables

# API Keys (Optional - most APIs work without keys)
COINGECKO_API_KEY=your_coingecko_pro_api_key_if_needed

# Web3 Configuration
WEB3_RPC_URL=https://eth.llamarpc.com

# Alert Configuration
ENABLE_ALERTS=true

# Discord Webhook (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Email Alerts (Optional)
ALERT_EMAIL=your_email@example.com
ALERT_EMAIL_FROM=sender_email@example.com
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_app_password

# Monitoring Settings
MONITOR_INTERVAL=300  # seconds (5 minutes)

# Data Directories
DATA_DIR=data
REPORT_DIR=reports
LOG_DIR=logs
